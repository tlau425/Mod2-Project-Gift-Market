<%= form_for @card do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :value %>
<%= f.number_field :value %>
<%= f.label :price %>
<%= f.number_field :price %>
<%= f.label :category %>
<%= f.collection_select(:category_id, @categories, :id, :name, prompt: true) %>
<%= f.label :company %>
<%= f.collection_select(:company_id, @companies, :id, :company_name, prompt: true)%>
<%= f.submit %>
<%end%>
